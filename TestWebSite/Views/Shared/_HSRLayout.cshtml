<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pokke's Libarary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestWebSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @Html.Partial("_Game")
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Guides">Guides</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Characters
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Physical">Physical</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Fire">Fire</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Ice">Ice</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Lightning">Lightning</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Wind">Wind</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Quantum">Quantum</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Imaginary">Imaginary</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Pokkeletter">Pokke's Letter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="HSR" asp-action="Sources">Sources</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @Html.Partial("_footer")
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
